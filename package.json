{
  "name": "fetch-gql-schema",
  "version": "1.0.0",
  "description": "A simple CLI to introspect a GraphQL API and write its schema to a file.",
  "main": "src/cli.js",
  "bin": {
    "fetch-gql-schema": "bin/fetch-gql-schema"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "standard --verbose | snazzy",
    "test": "jest -c ./jest.config.js",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [
    "graphql",
    "introspection",
    "schema",
    "CLI"
  ],
  "author": "Kalo Pilato",
  "license": "MIT",
  "dependencies": {
    "chalk": "^3.0.0",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "graphql": "^14.6.0",
    "is-valid-path": "^0.1.1",
    "node-fetch": "^2.6.0",
    "optionator": "^0.8.3",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "jest": "^25.1.0",
    "jest-watch-typeahead": "^0.4.2",
    "snazzy": "^8.0.0",
    "standard": "^14.3.1"
  },
  "standard": {
    "envs": [
      "jest"
    ],
    "ignore": [
      "node_modules/**"
    ],
    "validate": [
      "javascript"
    ]
  }
}
